{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "target": "ES6",
    "allowSyntheticDefaultImports": true,
    "outDir": "./outputs/source",
    "allowUnreachableCode": false
  },
  "exclude": [
    "node_modules"
  ]
}